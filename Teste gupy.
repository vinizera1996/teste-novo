Questão 1

<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Resolução do Problema</title>
</head>
<body>
<script>
  // Definindo as variáveis
  var INDICE = 13;
  var SOMA = 0;
  var K = 0;
  
  // Loop enquanto K for menor que INDICE
  while (K < INDICE) {
    K = K + 1;
    SOMA = SOMA + K;
  }
  
  // Imprimindo o valor de SOMA
  document.write("<p>A soma é: " + SOMA + "</p>");
</script>
</body>
</html>

Questão 2

<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Verificação de Número na Sequência de Fibonacci</title>
</head>
<body>
<script>
    // Função para verificar se um número pertence à sequência de Fibonacci
    function verificaFibonacci(numero) {
        // Inicializa os dois primeiros números da sequência
        var a = 0;
        var b = 1;

        // Enquanto b for menor ou igual ao número informado
        while (b <= numero) {
            // Se o número informado for igual a b, então pertence à sequência
            if (numero === b) {
                return true;
            }

            // Atualiza a e b para os próximos números da sequência
            var temp = a + b;
            a = b;
            b = temp;
        }

        // Se o número informado não foi encontrado na sequência, retorna falso
        return false;
    }

    // Função principal para solicitar o número e verificar se pertence à sequência de Fibonacci
    function verificarNumero() {
        // Solicita ao usuário um número
        var numero = parseInt(prompt("Informe um número para verificar se pertence à sequência de Fibonacci:"));

        // Verifica se o número pertence à sequência de Fibonacci
        if (verificaFibonacci(numero)) {
            alert(numero + " pertence à sequência de Fibonacci.");
        } else {
            alert(numero + " não pertence à sequência de Fibonacci.");
        }
    }

    // Chamada da função principal
    verificarNumero();
</script>
</body>
</html>

